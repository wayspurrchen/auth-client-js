{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "modules": true
  },
  "plugins": [
    "mocha"
  ],
  "globals": {
    "describe": false,
    "before": false,
    "beforeEach": false,
    "it": false,
    "window": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "strict": 2,
    "no-var": 2,
    "prefer-const": 2
  }
}
